---
interface Props {
	title?: string;
	theme?: string;
	className?: string;
}

const { title, theme, className } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content={theme} />
		<title>{title}</title>
	</head>
	<body class={className + " " + "dark:bg-black dark:text-white"}>
		<slot />
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		:root {
			--color-pri: #cc0033;
			--color-sec: #990033;
			--color-ter: #660033;
		}
		html,
		body {
			@apply h-full w-full m-0 p-0;
		}
	}
	@layer utilities {
		.wmode-vlr {
			writing-mode: vertical-lr;
		}
	}
</style>
